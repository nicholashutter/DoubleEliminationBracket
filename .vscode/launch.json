{
    "version": "0.2.0",
    "configurations": [

      {
        "name": "Debug Server",
        "type": "node",  
        "request": "launch",
        "runtimeArgs": [
          "-r",
          "${workspaceFolder}/expressServer/node_modules/ts-node",
          "-r",
          "${workspaceFolder}/expressServer/node_modules/ts-node/register"
        ],
        "args": [
          "${workspaceFolder}/expressServer/src/index.ts"
        ],
        "resolveSourceMapLocations": [
          "${workspaceFolder}/expressServer/**",
          "!**/node_modules/**"
        ]
      },
      {
        "type": "chrome",
        "request": "launch",
        "name": "Debug Client",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/reactclient",
        "preLaunchTask": "npm: start"
      }
    ],
    "compounds": [
      {
        "name": "Launch Client and Server",
        "configurations": ["Debug Server", "Debug Client"]
      }
    ]
  }

  "/expressServer/"