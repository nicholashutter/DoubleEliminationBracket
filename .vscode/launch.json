{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "tsx",
      "type": "node",
      "request": "launch",
  
      // Debug current file in VSCode
      "program": "${file}",
  
      /*
       * Path to tsx binary
       * Assuming locally installed
       */
      "runtimeExecutable": "tsx",
  
      /*
       * Open terminal when debugging starts (Optional)
       * Useful to see console.logs
       */
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
  
      // Files to exclude from debugger (e.g. call stack)
      "skipFiles": [
          // Node.js internal core modules
          "<node_internals>/**",
  
          // Ignore all dependencies (optional)
          "${workspaceFolder}/node_modules/**",
      ],
  },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Client",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/reactclient",
      "preLaunchTask": "npm: start"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: current file",
      //"env": { "NODE_ENV": "test" },
      "program": "${workspaceFolder}/expressServer/node_modules/.bin/jest",
      "args": [
        "${fileBasenameNoExtension}",
        "--config",
        "${workspaceFolder}/expressServer/jest.config.js",
        "--detectOpenHandles",
      ],
      "console": "integratedTerminal",
      "windows": {
        "program": "${workspaceFolder}/expressServer/node_modules/jest/bin/jest"
      }
    },
  ],
  "compounds": [
    {
      "name": "Launch Client and Server",
      "configurations": [
        "Debug Server",
        "Debug Client"
      ]
    }
  ]
}