{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "-r",
        "${workspaceFolder}/expressServer/node_modules/ts-node",
        "-r",
        "${workspaceFolder}/expressServer/node_modules/ts-node/register"
      ],
      "args": [
        "--watch",
        "${workspaceFolder}/expressServer/src/index.ts"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/expressServer/**",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Client",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/reactclient",
      "preLaunchTask": "npm: start"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: current file",
      //"env": { "NODE_ENV": "test" },
      "program": "${workspaceFolder}/expressServer/node_modules/.bin/jest",
      "args": [
        "${fileBasenameNoExtension}",
        "--config",
        "${workspaceFolder}/expressServer/jest.config.js",
        "--detectOpenHandles",
      ],
      "console": "integratedTerminal",
      "windows": {
        "program": "${workspaceFolder}/expressServer/node_modules/jest/bin/jest"
      }
    },
  ],
  "compounds": [
    {
      "name": "Launch Client and Server",
      "configurations": [
        "Debug Server",
        "Debug Client"
      ]
    }
  ]
}